<a href="/">Retour au shop</a>
<h3><a class="btn btn-secondary" href="/admin/add"><i class="fa fa-plus"></i> Create New</a> ADMIN PAGE - MANAGE ITEMS</h3>
  <input class="form-control" id="myInput" type="text" placeholder="Rechercher un item..">
<table class="table">
    <thead>
        <tr>
            <th>name</th>
            <th>description</th>
            <th>image</th>
            <th>price</th>
            <th>stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="myTable">
        {{#each list}}
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.description}}</td>
            <td>{{this.image}}</td>
            <td>{{this.price}}</td>
            <td>{{this.stock}}</td>
            <td>
                <a href="/admin/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/admin/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<script>
$(document).ready(function(){
  $("#myInput").on("keyup", function() {
    var value = $(this).val().toLowerCase();
    $("#myTable tr").filter(function() {
      $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
    });
  });
});
</script>