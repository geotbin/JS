
<%- include head.html %>

<div id="overlay">
<li class="login page">
    <h1 class="text-center mt-3 title">Welcome to OnlineChat V1</h1>
  <form id="loginForm">
  <div class="form">
    <h3 class="title">What's your username?</h3>
    <input class="usernameInput mt-2" id="username" type="text" placeholder="" pattern="[a-zA-Z]{1,15}" required/>
    <input type="submit" style="display:none"/>
  </div>
  </form>
</li>
</div>


<div class="row ml-5">
    <div class="col-12 col-md-8">
    <h3 class=" text-center">OnlineChat V1</h3>
    <div class="messaging">

          <div class="inbox_msg">
            <div class="inbox_people">


              <div class="headind_srch">
                <div class="recent_heading">
                  <h4>Recent</h4>
                </div>
                <div class="srch_bar">
                  <div class="stylish-input-group">
                    <input type="text" class="search-bar"  placeholder="Search" >
                    <span class="input-group-addon">
                    <button type="button"> <i class="fa fa-search" aria-hidden="true"></i> </button>
                    </span> </div>
                </div>
              </div>


              <div class="inbox_chat">
                <div class="chat_list active_chat">
                      <div class="chat_people">
                        <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                          <div class="chat_ib">
                            <h5>Global Chat</h5>
                            <p>Chat with all sockets</p>
                          </div>
                        </div>
                      </div>

                      <div class="chat_list">
                          <div class="chat_people">
                            <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                              <div class="chat_ib">
                                <h5>Private message</h5>
                                <p>Chat with one socket (not implemented yet)</p>
                              </div>
                            </div>
                          </div>
                  </div>
              </div>

              
            <div class="mesgs">
              <div class="msg_history" id="messages">
                <!-- messages sent will be here -->
                </div>

              <form id="chatForm" class="type_msg">
                <div class="input_msg_write">
                  <input type="text" class="write_msg" id="message" placeholder="Type a message" />
                  <button type="submit" class="msg_send_btn"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                </div>
              </form>
              </div>
          </div>
    </div>
  </div>
  <div class="col-6 col-md-4">


      <h3 class="">Users connected</h3>
      <div class="inbox_people">
          <div class="users_connected" id="users">
            <!-- messages sent will be here -->
          </div>
        </div>

  </div>

</div>


<script src='javascripts/client.js' type='module'></script>
<script src='/socket.io/socket.io.js'></script>
<%- include footer.html %>